<h1>Admin Dashboard</h1>

<h3>Recent Photos</h3>
  <div id="columns" data-columns=''>
    <% @photos.each do |photo| %>
      <div class='panel panel-primary photo' id='photo<%=photo.id%>'>
        <div class='panel-body'><a href = '/photos/<%=photo.id%>'><img src='<%= photo.url%>' class='img-responsive' /></a></div>
      </div>
    <%end%>
  </div>
<div class='row clear'>
  <div class='col col-md-6'>
    <h3>Recent Users</h3>
      <% @users.each do |user| %>
        <p><a href="/users/<%=user.id%>"><%=user.username%></a></p>
      <%end%>
  </div>

  <div class='col col-md-6'>
    <h3>Recent Comments</h3>
      <% @comments.each do |heart| %>
        <p><a href="/photos/<%=heart.photo.id%>"><%=heart.comment%></a></p>
      <%end%>
  </div>
</div>