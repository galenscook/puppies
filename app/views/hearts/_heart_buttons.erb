
<div class = 'heart-buttons'>
  <% if is_authenticated? %>
    <% if is_admin? %>
      <div class='admin-delete left'>
        <a href="/photos/<%=photo.id%>/delete">Delete Photo</a>
      </div>
    <%end%>
  <form method='post' action='/hearts' id='heart' <%if (photo.hearts.find_by(user_id: current_user.id))%>class="hidden"<%end%>>
    <input type='hidden' name='heart[user_id]' value='<%=current_user.id%>'>
    <input type='hidden' name='heart[photo_id]' value='<%=photo.id%>'>
    <div class='form-group'>
      <input type='text' class='form-control' name='heart[comment]' placeholder='What makes this so heartable?'>
    </div>
    <label class='heart-count photo<%=photo.id%>'><%= photo.heart_count %></label>
    <button type='submit' class='icon'><i class="fa fa-heart-o fa-2x"></i></button>
  </form>

  <form method='post' action='/hearts' id='unheart' <%if !(photo.hearts.find_by(user_id: current_user.id))%>class="hidden"<%end%>>
    <input type='hidden' name='_method' value='delete'>
    <input type='hidden' name='user_id' value='<%=current_user.id%>'>
    <input type='hidden' name='photo_id' value='<%=photo.id%>'>
    <label class='heart-count photo<%=photo.id%>'><%= photo.heart_count %></label>
    <button type='submit' class='icon'><i class="fa fa-heart fa-2x"></i></button>
  </form>
  <% else %>
  <label class='heart-count photo<%=photo.id%>'><%= photo.heart_count %></label><i class="fa fa-heart-o fa-2x login"></i>
  <div class='login-prompt' style='display: none;'>please <a href='/users/login'>log in</a> or <a href='/users/new'>sign up</a> to heart.</div>
  <%end%>
</div>



