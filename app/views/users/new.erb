<% if @errors %>
  <%= @errors[0] %>
<% end %>


<form method='post' action='/users' class='col-md-4 col-md-offset-3'>
  <div class="form-group">
    <label for='user[username]'>Choose a username:</label>
    <input name='user[username]' type='text' class='form-control'>
  </div>
  <div class='form-group'>
    <label for='user[password]'>Choose a password:</label>
    <input name='user[password]' type='password' class='form-control'>
  </div>
  <div class='form-group'>
    <label for='user[password_confirmation]'>Confirm your password:</label>
    <input name='user[password_confirmation]' type='password' class='form-control'>
  </div>
  <input type='submit' value='Sign Up!' class='btn btn-default'>
</form>